{
  "compilerOptions": {
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "stripInternal": false,
    "target": "es5",
    "outDir": "./dist",
    "module": "es2015",
    "declaration": true,
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "dom"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  },
  "exclude": ["node_modules", "dist", "spec"]
}
